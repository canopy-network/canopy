{
  "version": "1.0.0",
  "tables": {
    "blocks": {
      "title": "Blocks",
      "columns": [
        {
          "key": "height",
          "label": "Block Height",
          "type": "number",
          "format": "animated",
          "link": "/block/{{value}}",
          "icon": "cube",
          "color": "primary"
        },
        {
          "key": "timestamp",
          "label": "Timestamp",
          "type": "datetime",
          "format": "YYYY-MM-DD HH:mm:ss"
        },
        {
          "key": "age",
          "label": "Age",
          "type": "relative-time",
          "format": "ago"
        },
        {
          "key": "hash",
          "label": "Block Hash",
          "type": "hash",
          "format": "truncate",
          "truncate": 12,
          "color": "text-gray-400"
        },
        {
          "key": "producer",
          "label": "Block Producer",
          "type": "address",
          "format": "truncate",
          "truncate": 12,
          "color": "text-gray-400"
        },
        {
          "key": "transactions",
          "label": "Transactions",
          "type": "number",
          "format": "badge",
          "colorMapping": {
            "low": {
              "max": 50,
              "color": "blue"
            },
            "medium": {
              "max": 150,
              "color": "green"
            },
            "high": {
              "max": 999999,
              "color": "orange"
            }
          }
        },
        {
          "key": "gasPrice",
          "label": "Gas Price",
          "type": "number",
          "format": "currency",
          "suffix": " CNPY",
          "decimals": 4
        },
        {
          "key": "blockTime",
          "label": "Block Time",
          "type": "number",
          "format": "duration",
          "suffix": "s",
          "decimals": 2
        }
      ],
      "filters": {
        "enabled": true,
        "fields": [
          {
            "key": "timeRange",
            "type": "select",
            "label": "Time Range",
            "options": [
              {
                "value": "all",
                "label": "All Blocks"
              },
              {
                "value": "hour",
                "label": "Last Hour"
              },
              {
                "value": "24h",
                "label": "Last 24h"
              },
              {
                "value": "week",
                "label": "Last Week"
              }
            ]
          },
          {
            "key": "sortBy",
            "type": "select",
            "label": "Sort By",
            "options": [
              {
                "value": "height",
                "label": "Height"
              },
              {
                "value": "timestamp",
                "label": "Timestamp"
              },
              {
                "value": "transactions",
                "label": "Transactions"
              },
              {
                "value": "producer",
                "label": "Producer"
              }
            ]
          }
        ]
      },
      "pagination": {
        "enabled": true,
        "pageSize": 10,
        "showTotal": true
      }
    },
